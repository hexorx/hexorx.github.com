 ---
title:      <%= title %>
created_at: <%= Time.now.to_y %>
filter:     erb
dirty:      true
---

%h2.title= h(@page.title)

- articles = @pages.find(:all, :in_directory => @page.dir, :recursive => true, :sort_by => "created_at", :reverse => true, :blog_post => true)
- articles.delete(@page)
- paginate(articles, 10) do |article|
  .article
    .heading
      %h2.title= link_to_page(article)
      %p.date &#8212 #{article.created_at.strftime('%A, %B %e, %Y')}
    .reddit
    .twitter
    .summary
      - if article.summary
        %p= article.summary
      - else
        = render(article)
    .permalink
      .comment= link_to("Comments", article, :anchor => 'disqus_thread')
      .read= link_to("Full Article &#187", article)